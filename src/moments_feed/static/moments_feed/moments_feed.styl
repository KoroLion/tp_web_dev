div.feed
  width 600px
  overflow-x hidden
  margin 0 auto
  margin-top 20px

  div#popularUsers
    margin-bottom 20px
    span
      a
        padding-right 10px
  div.moment
    border 1px solid #CCC
    border-radius 3px
    margin-bottom 40px
    img
      width 100%
      height 100%
    div.user-info
      display flex
      padding 5px
      div.avatar
        width 64px
        height 64px
        border-radius 64px
        overflow hidden
      div.username-and-location
        margin-left 15px
    div.image
      height 600px
    div.controls
      a
        color black
      padding 10px
      padding-bottom 5px
    div.statistics
      padding-left 10px
      padding-bottom 10px
      > span
        margin-right 15px
    div.date
      padding 10px
      padding-top 0
      color #AAA