div.user-profile
  margin 0 auto
div.user-info
  margin-top 30px
  display flex
  div.avatar
    width 40%
    div.image
      width 50%
      border-radius 100%
      overflow hidden
      margin 0 auto
      img
        width 100%
        height 100%
  div.info
    div.statistics
      margin-top 15px
      span
        font-size 1.15em
        padding-right 30px

div.user-moments
  display flex
  flex-wrap wrap
  div
    flex 1 0 26%
    max-width 33%
    margin-bottom 20px
    margin-left 20px
    overflow hidden
    img
      width 100%